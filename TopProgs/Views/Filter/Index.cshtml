@model TopProgs.ViewModels.FilterView

@{
    ViewBag.Title = "Filters";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="lead">
    <h1>@ViewBag.Title</h1>
</div>

<div class="row">
    <div class="col-md-8">
        <section id="filterForm">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                if (Model != null && Model.DaysOfWeek != null && Model.DaysOfWeek.Items != null)
                {
                    <div class="row">
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="Filter_DaysOfWeek">Days of the week</label>
                            <div class="col-md-10">
                                @Html.ListBoxFor(
                                        x => x.DaysOfWeek.SelectedItemIds,
                                        new SelectList(Model.DaysOfWeek.Items, "Value", "Text"),
                                        new { size = "7", multiple = "multiple" }
                                    )
                            </div>
                        </div>
                    </div>
                }

                <div class="row">
                    <div class="form-group">
                        <hr />
                        @Html.LabelFor(m => m.Filter.StartTime, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Filter.StartTime, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Filter.StartTime, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Filter.EndTime, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Filter.EndTime, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Filter.EndTime, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <div class="checkbox">
                                @Html.CheckBoxFor(m => m.Filter.TimeInclusive)
                                @Html.LabelFor(m => m.Filter.TimeInclusive)
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Filter.MinDuration, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Filter.MinDuration, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Filter.MinDuration, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Filter.SearchTitle, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Filter.SearchTitle, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Filter.SearchTitle, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <p></p>
                        <p>
                            <input type="reset" value="Reset" class="btn btn-default" />
                        </p>
                        <p>
                            <a class="btn btn-default" href="~/Filter/Previous">&laquo; Previous</a>
                            &nbsp;
                            <input type="submit" value="Next &raquo;" class="btn btn-default" />
                        </p>
                    </div>
                </div>
            }
        </section>
    </div>
</div>